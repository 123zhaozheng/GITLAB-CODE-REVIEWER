# 环境配置示例文件
# 复制为 .env 并填入真实值

# AI模型配置
OPENAI_API_KEY=sk-your-openai-api-key-here
# OpenAI兼容服务的API基础URL（可选）
# OPENAI_API_BASE=https://api.openai.com/v1
# OPENAI_API_URL=https://api.openai.com/v1  # 别名支持，与OPENAI_API_BASE功能相同

# AI提供商配置（可选）
# AI_PROVIDER=openai  # 支持: openai, azure, custom等
# CUSTOM_LLM_PROVIDER=custom  # 自定义LLM提供商标识

# 模型配置
DEFAULT_AI_MODEL=gpt-4
FALLBACK_AI_MODEL=gpt-3.5-turbo

# 示例：使用其他OpenAI兼容服务
# OPENAI_API_BASE=https://your-custom-openai-compatible-service.com/v1
# OPENAI_API_KEY=your-custom-api-key
# DEFAULT_AI_MODEL=gpt-4
# FALLBACK_AI_MODEL=gpt-3.5-turbo

# 服务配置
SERVICE_NAME=gitlab-code-reviewer
SERVICE_VERSION=1.0.0
LOG_LEVEL=INFO
DEBUG=false

# 数据库配置 (可选，用于缓存)
DATABASE_URL=sqlite:///./app.db
REDIS_URL=redis://localhost:6379/0

# 性能配置
MAX_CONCURRENT_REVIEWS=10
REVIEW_TIMEOUT_SECONDS=300
TOKEN_CACHE_TTL=3600

# 安全配置
API_KEY_HEADER=X-API-Key
RATE_LIMIT_PER_MINUTE=60
ALLOWED_HOSTS=*

# GitLab默认配置
DEFAULT_GITLAB_URL=https://gitlab.com
MAX_FILES_PER_REVIEW=50
MAX_TOKENS_PER_REQUEST=32000

# 成本优化
ENABLE_COST_OPTIMIZATION=true
MAX_COST_PER_REVIEW=0.50
SMART_FILTERING=true